<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <!-- VOTER -->
        <parameter key="mapbender.style.manager.voter.class">Mapbender\SearchBundle\Security\StyleManagerVoter</parameter>

    </parameters>


    <services>
        <!-- Services -->

        <service class="Mapbender\SearchBundle\Component\QueryManager" id="mapbender.query.manager">
            <argument type="service" id="service_container"/>
        </service>
        <service class="Mapbender\SearchBundle\Component\StyleManager" id="mapbender.style.manager">
            <argument type="service" id="service_container"/>
        </service>


        <!-- Voters -->
        <service id="mapbender.style.manager.voter" class="%mapbender.style.manager.voter.class%" public="false">
            <tag name="security.voter"/>
        </service>
    </services>
</container>